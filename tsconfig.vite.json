{
  "extends": "./tsconfig.json",
  "include": [
    ".react-router/types/**/*",
    "src/**/*",
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["vite/client"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "rootDirs": [".", "./.react-router/types"],
    "paths": {
      "~/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
